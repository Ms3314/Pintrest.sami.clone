<%- include('./partials/header.ejs') %>
<div class="text-black w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[26vw] px-20 py-10 bg-zinc-100 rounded-[30px]">
        <h1 class="text-3xl text-center font-semibold mb-7 text-zinc-700  capitalize tracking-tighter leading-none" >Create New Account</h1>
        <form action="/register" method="post">
            <input class="block border-2 mt-5 rounded-md w-full px-3 py-2 " type="text" name="username" placeholder="username" >
            <input class="block border-2 mt-3 rounded-md w-full px-3 py-2 " type="email" name="email" placeholder="email" >
            <input class="block border-2 mt-3 rounded-md w-full px-3 py-2 " type="password" name='password' placeholder="password" >
            <input class="block border-2 mt-3 text-white w-full px-3 py-2 bg-red-600 rounded-full" type="submit" value="Create New Account">
            <p class="text-sm text-red-500 mt-3 text-center font-semibold "> <%= error %> </p>
            <p class="text-xs font-semibold text-zinc-700 w-[250px] mx-auto mt-3 text-center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ullam, eum! Possimus vel pariatur iure ad a culpa distinctio unde, cumque architecto nisi quibusdam dolorum ipsam.</p>
        </form>
        <a href="/login" class="inline-block mt-7 text-sm font-semibold text-center w-full text-zinc-700 ">Already have an account??</a>
    </div>
</div><%- include('./partials/footer.ejs') %>
