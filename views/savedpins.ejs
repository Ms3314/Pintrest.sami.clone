<%- include('./partials/header.ejs') %>
<div class="w-full h-screen bg-zinc-900 text-zinc-200">
    <%- include('./partials/Navbar.ejs') %>

    <div class="p-6">
        <h1 class="text-3xl font-bold mb-6 text-center">Your Saved Pins</h1>

        <!-- Loop through savedPins and display each pin -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% savedPins.forEach(function(pin) { %>
                <div class="relative w-full h-[400px] rounded-lg overflow-hidden shadow-lg transition-shadow duration-300 hover:shadow-2xl">
                    <!-- Image container -->
                    <img src="<%= pin.img_url %>" alt="<%= pin.title %>" class="w-full h-full object-cover transform transition-transform duration-300 hover:scale-105">
                    
                    <!-- Pin title and description -->
                    <div class="absolute bottom-0 left-0 w-full bg-black bg-opacity-60 p-4 text-white">
                        <h2 class="text-lg font-bold truncate"><%= pin.title %></h2>
                        <p class="text-sm truncate"><%= pin.description %></p>
                    </div>
                </div>
            <% }) %>
        </div>

        <% if (savedPins.length === 0) { %>
            <p class="text-center mt-5 text-lg">No saved pins found.</p>
        <% } %>
    </div>
</div>
<%- include('./partials/footer.ejs') %>
