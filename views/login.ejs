<%- include('./partials/header.ejs') %>

    <div class="w-full text-black h-screen bg-[url('https://images.unsplash.com/photo-1503455637927-730bce8583c0?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
        <div class="w-[26vw] px-20 py-10 bg-zinc-100 rounded-[30px]">
            <h1 class="text-3xl text-center font-semibold mb-7 text-zinc-700  capitalize tracking-tighter leading-none" >Welcome to pintrest</h1>
            <form action="/login" method="post" >
                <input class="block border-2 mt-5 rounded-md w-full px-3 py-2 " type="text" name="username" placeholder="username" >
                <input class="block border-2 mt-2 rounded-md w-full px-3 py-2 " type="password" name='password' placeholder="password" >
                <!-- <a href="#" class="inline-block font-semibold text-zinc-500 mt-2">Forgot password ?</a> -->
                <input class="block border-2 mt-2 text-white w-full px-3 py-2 bg-red-600 rounded-full" type="submit" value="Login">
                <p class="text-sm text-red-500 mt-3 text-center font-semibold "> <%= error %> </p>
            </form>
            <a href="/register" class="inline-block mt-3 text-sm font-semibold text-center w-full text-zinc-700 ">Dont have an account??</a>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>

